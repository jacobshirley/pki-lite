{
    "name": "pki-lite-monorepo",
    "version": "1.0.8",
    "description": "Lightweight, modular, and extensible Public Key Infrastructure (PKI) library for JavaScript and TypeScript.",
    "type": "module",
    "private": true,
    "scripts": {
        "compile": "pnpm -r run compile && pnpm compile:examples && pnpm compile:test",
        "compile:examples": "node ./scripts/build-examples.ts && prettier --write EXAMPLES.md",
        "compile:test": "tsc --noEmit",
        "prepublish": "pnpm -r run compile",
        "test": "pnpm -r --no-sort run test",
        "prepare": "husky || true",
        "lint:staged": "lint-staged --allow-empty",
        "lint:commit": "commitlint --edit $1",
        "format": "prettier --write '**/*.{js,ts,json,md,yaml,yml}'",
        "docs:gen": "sh -c 'pnpm docs:gen:md \"$@\" && pnpm docs:gen:html \"$@\"' --",
        "docs:gen:md": "./scripts/gen-md-docs.sh",
        "docs:gen:html": "./scripts/gen-html-docs.sh"
    },
    "lint-staged": {
        "*.{js,ts,json,md}": "pnpm format"
    },
    "keywords": [],
    "author": "Jacob Shirley",
    "license": "MIT",
    "packageManager": "pnpm@10.19.0",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/jacobshirley/pki-lite.git"
    },
    "readme": "README.md",
    "pnpm": {
        "overrides": {
            "vitest": "$vitest",
            "@vitest/browser-playwright": "$vitest",
            "typescript": "$typescript"
        }
    },
    "dependencies": {
        "pki-lite": "^1.0.8",
        "pki-lite-crypto-extended": "^1.0.8"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.0.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@types/node": "^24.5.2",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.0",
        "playwright": "^1.55.0",
        "prettier": "^3.6.2",
        "typedoc": "^0.28.13",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.3"
    }
}
